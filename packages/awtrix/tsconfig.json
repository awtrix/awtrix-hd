{
  "compilerOptions": {
    "target": "es2015",
    "moduleResolution": "node",
    "module": "CommonJS",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "skipLibCheck": true,
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "strict": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./web/*"],
      "@/*": ["./src/*"],
    },
    "types": [
      "node",
      "@types/node",
      "@nuxt/types",
      "@nuxtjs/axios"
    ]
  },
  "exclude": [
    "node_modules",
    "tests",
    "dist",
    "src/app/template"
  ]
}
